# Server Configuration
PORT=5000
NODE_ENV=development
BASE_URL=http://localhost:5000

# Database
MONGO_URI=mongodb://localhost:27017/gm-chicks
# Or use MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/gm-chicks

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# MPesa Daraja API Configuration
MPESA_ENVIRONMENT=sandbox
# Use 'sandbox' for testing, 'production' for live

# Sandbox Credentials (Get from https://developer.safaricom.co.ke/)
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_PASSKEY=your_passkey_here
MPESA_SHORTCODE=174379
# Sandbox shortcode is typically 174379

# Production Credentials (uncomment when going live)
# MPESA_CONSUMER_KEY=your_production_consumer_key
# MPESA_CONSUMER_SECRET=your_production_consumer_secret
# MPESA_PASSKEY=your_production_passkey
# MPESA_SHORTCODE=your_production_shortcode

# MPesa Callback URLs
MPESA_CALLBACK_URL=https://your-domain.com/api/payments/callback
MPESA_TIMEOUT_URL=https://your-domain.com/api/payments/timeout

# Email Configuration (using Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=GM Chicks <noreply@gmchicks.com>

# SMS Configuration (Africa's Talking or any SMS provider)
SMS_API_KEY=your_sms_api_key
SMS_USERNAME=your_sms_username

# Admin Configuration
ADMIN_EMAIL=admin@gmchicks.com
ADMIN_PASSWORD=change_this_secure_password

# Farm Visit Configuration
MAX_VISITORS_PER_DAY=20
FARM_OPEN_TIME=09:00
FARM_CLOSE_TIME=17:00

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000